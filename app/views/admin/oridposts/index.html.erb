
<table class="table table-bordered">
  <% @oridposts.each do |oridpost| %>
  <tr>
    <td>
      <%= render_oridpost_status(oridpost) %>
      <%= link_to(oridpost.title, oridpost_path(oridpost)) %>
    </td>
    <td>
      <%= oridpost.user.email %>
    </td>
    <td>
      <%= link_to("edit", edit_admin_oridpost_path(oridpost), :class => "btn btn-info") %> |
      <%= link_to("Destroy", admin_oridpost_path(oridpost), :method => :delete, :class => "btn btn-danger", :data => {:confirm => "Are you sure?"}) %>
    </td>
    <td>
      <%= oridpost.created_at %>
    </td>
  </tr>
  <% end %>
</table>
