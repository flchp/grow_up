
<table class="table table-bordered">
  <% @oridposts.each do |oridpost| %>
  <tr>
    <td>
      <%= render_oridpost_status(oridpost) %>
      <%= link_to(oridpost.title, oridpost_path(oridpost)) %>
    </td>
    <td>
      <%= oridpost.user.email %>
    </td>
    <td>
      <%= link_to("edit", edit_admin_oridpost_path(oridpost), :class => "btn btn-xs btn-info") %> |
      <%= link_to("Destroy", admin_oridpost_path(oridpost), :method => :delete, :class => "btn btn-xs btn-danger", :data => {:confirm => "Are you sure?"}) %> |
      <% if oridpost.is_hidden %>
        <%= link_to("Publish", publish_admin_oridpost_path(oridpost) , :method => :post, :class => "btn btn-xs btn-success") %>
      <% else %>
        <%= link_to("Hide", hide_admin_oridpost_path(oridpost), :method => :post, :class => "btn btn-xs btn-warning") %>
      <% end %>
    </td>
    <td>
      <%= oridpost.created_at %>
    </td>
  </tr>
  <% end %>
</table>
